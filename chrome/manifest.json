{
  "name": "Disconnect Search",
  "version": "1.6.0",
  "manifest_version": 2,
  "description": "Search privately using your favorite search engine.",
  "icons": {"128": "images/128.png", "48": "images/48.png", "16": "images/16.png"},
  "homepage_url": "https://www.disconnect.me/search",
  "permissions": [
    "chrome://favicon/",
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "idle",
    "notifications",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/focus.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/serp.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "background": {
    "scripts": [
      "scripts/vendor/jquery/jquery.js",
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_title": "Disconnect Search",
    "default_icon": "images/48.png",
    "default_popup": "markup/popup.html"
  }
}